%h1 ユーザー一覧
= link_to "ユーザー追加", new_user_path

%table
  %thead
    %tr
      %th ID
      %th 名前
      %th メールアドレス
      %th TEL
      %th
      %th
  %tbody
    - @users.each do |user|
      %tr
        %td= user.id
        %td= user.name
        %td= user.email
        %td= user.tel
        %td= link_to '編集', edit_user_path(user)
        %td= link_to '削除', user_path(user), method: :delete, data: { confirm: '本当に削除しますか？' }